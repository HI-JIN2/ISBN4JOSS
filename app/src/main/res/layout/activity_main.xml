<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <com.journeyapps.barcodescanner.DecoratedBarcodeView
        android:id="@+id/barcode_view"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1" />

    <Button
        android:id="@+id/btn_do_scan"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Resume Scanning" />

    <TextView
        android:id="@+id/tb_isbn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:text="Scanned ISBN will be shown here"
        android:textSize="18sp" />


    <TextView
        android:id="@+id/bookTitleTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="Title: "
        android:textSize="18sp" />

    <TextView
        android:id="@+id/bookAuthorTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="Authors: "
        android:textSize="18sp" />

    <Button
        android:id="@+id/btn_find_info"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="findInfo" />

    <Button
        android:id="@+id/btn_add_db"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="add DB" />
</LinearLayout>
